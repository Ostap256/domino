%html
  %head
    %title
      Dynamic Games
    = stylesheet_link_tag    'application', :media => 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag 'jquery'
    = javascript_include_tag 'http://localhost:9292/faye.js'
    = javascript_include_tag 'rails.validations'
    = csrf_meta_tags

  %body
    %div.container-fluid
      %div{class: 'row-fluid page'}
        %div.main-container
          = render :template => 'navigation/header'
          = render :partial => 'navigation/flash', :locals => {flash: flash}
          = yield

        %div.right-container
          = render('navigation/sidebar') if current_user && !current_user.guest?
          = render('navigation/advertise') if !current_user || current_user.guest?
      %div.footer
        = render :template => 'navigation/footer'

