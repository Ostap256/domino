%div{:class=>"modal hide fade", :id=>'myModal', :tabindex=>"-1", :role=>"dialog", 'aria-hidden'=>"true"}
  %div.modal-header
    %button{:type=>"button", :class=>"close", 'data-dismiss'=>"modal", 'aria-hidden'=>"true"}
      Ã—
    %h4.modal-hd
      = t('users.registration.register_form')
    %h5.modal-desc
      = t('users.registration.fill_in_fields')
  %div{:class=>"modal-body"}
    = form_for @user, validate: true, :url => {:action => :process_register} do |form|
      %p
        = form.email_field :email, :placeholder => t('global.email')
      %p
        = form.text_field :surname, :placeholder => t('global.surname')
      %p
        = form.text_field :name, :placeholder => t('global.name')
      %p
        = form.select :gender, options_for_select([[t('global.male'), 'm'], [t('global.female'), 'f']])
      %p
        = form.password_field :password_digest, :placeholder => t('global.password')
      %p
        = form.password_field :confirm_password, :placeholder => t('global.confirm_password')
      %p
      %div{:class=>"modal-footer"}
        <button class="btn" data-dismiss="modal" aria-hidden="true">
        = t('global.close')
        </button>
        = form.submit t('users.registration.sign_up'), :class => 'btn btn-success'