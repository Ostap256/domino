%div{:class=>'container'}
  %h2.form-signin-heading
    Please sign in, or
    = link_to image_tag('facebook_login_button2.png'), "/auth/facebook", id: "sign_in"
  %h2.form-signin
    = form_tag :action => :do_login do
      %p
        = text_field_tag :email, nil, :placeholder => 'Email'
      %p
        = password_field_tag :password, nil, :placeholder => 'Password'
      %p
        = link_to t(:forgot), forgot_visitor_index_path, :class => 'forgot'
      %p{:class=>'remember'}
        = check_box_tag :remember_me
        Remember Me
      %p
        = submit_tag 'Sign in >', :class => 'btn btn-large btn-primary'
        = link_to t(:register), "#myModal", :class => 'btn btn-large btn-success', 'data-toggle'=>"modal"

= render :partial => 'register'