%div{:class=>"modal hide fade", :id=>'newGame', :tabindex=>"-1", :role=>"dialog", 'aria-hidden'=>"true"}
  = render 'new_game_modal'

%div{:class=>"modal hide fade", :id=>'listGames', :tabindex=>"-1", :role=>"dialog", 'aria-hidden'=>"true"}
  = render 'list_of_games_modal'

%div{:class=>"modal hide fade", :id=>'findGame', :tabindex=>"-1", :role=>"dialog", 'aria-hidden'=>"true"}
  = render 'find_game_modal'

= javascript_include_tag 'games_pagination'

%div{:class=>'games'}
  %h1{:class=>'edit-user'}
    = t('games.header')
  %p
    = image_tag 'domino_game.jpg'
  %p
    = link_to t('games.new_game'), '#newGame', :class => 'btn btn-large btn-success', 'data-toggle'=>"modal"
    = link_to t('games.list_of_games'), '#listGames', :class => 'btn btn-large btn-success', 'data-toggle'=>"modal"
    = link_to t('games.find_game'), '#findGame', :class => 'btn btn-large btn-success', 'data-toggle'=>"modal"



  %div{:class=>"tabbable"}
    %ul{:class=>"nav nav-tabs"}
      %li{:class=>"active"}
        = link_to t('global.friends'), "#friends", 'data-toggle'=>"tab"
      %li
        = link_to t('games.current_games'), "#current_games", 'data-toggle'=>"tab"
      %li
        = link_to t('games.finished_games'), "#finished_games", 'data-toggle'=>"tab"

    %div{:class=>"tab-content"}
      %div{:class=>"tab-pane active", :id=>"friends"}
        = render 'domino/users/friends'

      %div{:class=>"tab-pane", :id=>"current_games"}
        = render 'current_games'
      %div{:class=>"tab-pane", :id=>"finished_games"}
        = render 'finished_games'