%p
  %table{:class=>"table table-striped"}
    %caption
      %h5{:class=>'pull-left'}
        Finished Games
    %thead
      %tr
        %th
          Result
        %th
          Type
        %th
          Time per move
        %th
          Date
    %tbody
      - @my_finished_games.each do |game|
        %tr
          %td
            = game.result(current_user)
          %td
            = game.game_type
          %td
            = game.time_per_move
          %td
            = game.finished
          %td
            = link_to t(:view), '#'