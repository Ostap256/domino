= render :partial => 'game_description' if @game.available?

- if @domino_game
  - @domino_game.market.each do |bone|
    = content_tag :div, nil, :class => bone_v_class(bone)
  %span10
    First player
    - @domino_game.players.first.bones.each do |bone|
      = content_tag :div, nil, :class => bone_v_class(bone)
  %span10
    Second Player
    - @domino_game.players.last.bones.each do |bone|
      = content_tag :div, nil, :class => bone_v_class(bone)
