%div#header
  %div{:class => 'navbar navbar-inverse navbar-fixed-top'}
    %div{:class => 'navbar-inner'}
      = link_to t(:domino), root_path, :class => 'brand'
      %div{:class=>'nav-collapse collapse'}
        %ul{:class=>'nav pull-right'}
          %li
            = link_to t(:games), domino_games_path
          %li
            = link_to t(:tournament), '#'
          %li
            = link_to t(:dashboard), '#'
          %li
            = link_to t(:chat), domino_chat_index_path
          - if current_user
            %li{:class=>'dropdown'}
              %a{:class=>"dropdown-toggle", :id=>"dLabel", :role=>"button", 'data-toggle'=>"dropdown", 'data-target'=>"#", :href=>"/"}
                = current_user.name
                %b{:class=>"caret"}
              %ul{:class=>"dropdown-menu"}
                %li
                  = link_to t(:home), domino_user_path(current_user.id)
                %li
                  = link_to t(:edit), edit_domino_user_path(current_user.id)
                %li{:class=>"divider"}
                %li
                  = link_to t(:sign_out), logout_path


