%div.modal-header
  %button{:type=>"button", :class=>"close", 'data-dismiss'=>"modal", 'aria-hidden'=>"true"}
    Ã—
  %h4.modal-hd
    = t('games.create_game')
  %h5
    = t('users.registration.fill_in_fields')
%div.modal-body
  = form_for @game, :url => {:action => :create} do |form|
    %p
      = form.select :game_type, options_for_select(DominoGame::GAME_TYPES)
      = form.select :players_count, options_for_select(@game.players_count_select)
      = form.select :time_per_move, options_for_select(@game.minutes_per_move_select)
    %div.modal-footer
      <button class="btn" data-dismiss="modal" aria-hidden="true">
      = t('global.close')
      </button>
      = form.submit t('global.create'), :class => 'btn btn-success'