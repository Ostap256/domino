= javascript_include_tag 'domino/market'

= content_tag :div, :id => 'game_online', 'data-game_id' => @game_db.id do

  - if @game.available?
    = render :partial => 'game_description'
  - elsif @domino_game
    = render :partial => 'dd/games/online/market'

    = render :partial => 'dd/games/online/battle-field'
    = render :partial => 'dd/games/online/rotation_box'

    - @domino_game.players.each do |player|
      %div{:id => "player-#{player.position}"}
        - if player.position%2 != 0
          = render(:partial => 'dd/games/online/h_player_bones', :locals => {:player => player})
        -else
          = render(:partial => 'dd/games/online/v_player_bones', :locals => {:player => player})
