%div{:class=>"modal hide fade", :id=>'createPost', :tabindex=>"-1", :role=>"dialog", 'aria-hidden'=>"true"}
  = render 'dd/dashboard/news/create_post_modal'

= javascript_include_tag :endless_page

%div{class: 'news', id: 'news'}
  = link_to t('dashboard.news.create_post'), '#createPost', :class => 'btn btn-large btn-success', 'data-toggle'=>"modal"

  - @posts.each do |p|
    = render partial: 'dd/dashboard/news/post', locals: {p: p}
